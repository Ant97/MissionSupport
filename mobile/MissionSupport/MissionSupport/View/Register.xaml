<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MissionSupport.View.Register">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="30, 10, 30, 10">
            <Label Text="Mission Support"
               FontSize="40"
               TextColor="Teal" />
            <Entry x:Name="usernameEntry" Placeholder="Username" />
            <Entry x:Name="firstNameEntry" Placeholder="First Name" />
            <Entry x:Name="lastNameEntry" Placeholder="Last Name" />
            <Entry x:Name="passwordEntry" Placeholder="Password" />
            <Button x:Name = "registerButton" Text="Register" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>